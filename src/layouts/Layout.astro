---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Will you be my valentine?</title>
    <script>
      window.onbeforeunload = function () {
        window.scrollTo(0, 0);
      };
      window.addEventListener("load", function () {
        setTimeout(() => {
          window.scrollTo(0, 0);
        }, 0);
      });
    </script>
  </head>
  <body>
    <div id="container">
      <Header />
      <main>
        <slot />
      </main>
    </div>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const links = document.querySelectorAll("header nav a");
        console.log("Links found:", links.length); // Debug: log number of links found

        links.forEach((link, index) => {
          const anchor = link;
          console.log(`Checking link ${index + 1}:`, anchor.href); // Debug: log each link's href

          if (anchor.href === window.location.href) {
            console.log(`Match found for link: ${anchor.href}`); // Debug: log when match is found
            anchor.classList.add("active");
          } else {
            console.log(`No match for link: ${anchor.href}`); // Debug: log when no match is found
          }
        });
      });
    </script>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: LoveAdelia;
    src: url("../assets/fonts/LoveAdelia.ttf") format("truetype");
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html,
  body {
    scroll-behavior: smooth;
    font-family: "LoveAdelia";
    color: white;
    width: 100%;
    height: 100%;
    background: rgb(255, 137, 245);
    background: -moz-radial-gradient(
      circle,
      rgba(255, 137, 245, 1) 0%,
      rgba(154, 148, 233, 1) 100%
    );
    background: -webkit-radial-gradient(
      circle,
      rgba(255, 137, 245, 1) 0%,
      rgba(154, 148, 233, 1) 100%
    );
    background: radial-gradient(
      circle,
      rgba(255, 137, 245, 1) 0%,
      rgba(154, 148, 233, 1) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#ff89f5",endColorstr="#9a94e9",GradientType=1);
  }

  body {
    #container {
      main {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      a {
        cursor: pointer;
        text-decoration: none;
      }
      button {
        cursor: pointer;
      }
    }
  }
</style>
